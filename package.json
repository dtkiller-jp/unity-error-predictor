{
  "name": "unity-error-predictor",
  "displayName": "Unity Error Predictor",
  "description": "Predicts Unity C# compile errors and warnings.",
  "version": "1.0.0",
  "publisher": "YourPublisherName",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:unityErrorPredictorView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "unity-error-predictor-container",
          "title": "Unity Predictor",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "unity-error-predictor-container": [
        {
          "id": "unityErrorPredictorView",
          "name": "Error/Warning",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Unity Error Predictor",
      "properties": {
        "unityErrorPredictor.analyzer.path": {
          "type": "string",
          "default": "",
          "description": "Path to the UnityErrorPredictor.Analyzer.exe executable."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",

    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}